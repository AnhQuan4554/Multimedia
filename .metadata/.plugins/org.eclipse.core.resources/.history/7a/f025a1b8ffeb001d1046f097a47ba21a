package dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;

import model.Food;
import model.Table;

public class FoodDao extends DAO  {
	public FoodDao() {
		super();
	}
	public String searchFood(String foodName){
		String sql = "SELECT * FROM orderfood.food WHERE foodName LIKE ?";
		try{
		
			PreparedStatement ps = con.prepareStatement(sql);
			ps.setString(1, "%" + foodName + "%");
			ResultSet rs = ps.executeQuery();
			Food rm = new Food();
			while(rs.next()){
				
				rm.setIdFood(rs.getString("idFood"));
				rm.setFoodName(rs.getString("foodName"));
				rm.setDes(rs.getString("describe"));
				rm.setPrice(rs.getInt("price"));
				System.out.println("Ket qua la");
				System.out.println( rm.getFoodName());
								
			}
		}catch(Exception e){
			e.printStackTrace();
			return false;
		}
		return true;	
		
	}
	public static void main(String[] args) {
		FoodDao fooddao = new FoodDao();
		fooddao.searchFood(null)
	}
}
