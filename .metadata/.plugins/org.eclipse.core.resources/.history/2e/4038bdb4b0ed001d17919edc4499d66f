package dao;

import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.sql.Statement;

import model.orderDetail;

public class orderDetailDAO extends DAO {
	public orderDetailDAO() {
		super();
	}
	public boolean addOrderDetail(orderDetail orderdetail) {
		String sqlAddFood = "INSERT INTO orderfood.orderdetail(numberTable, foodId, quantity, price) VALUES(?,?,?,?)";
		try{
			
			PreparedStatement ps = con.prepareStatement(sqlAddFood, Statement.RETURN_GENERATED_KEYS);
			ps.setString(1, orderdetail.getNumberTable());
			ps.setString(2, orderdetail.getFoodId());
			ps.setInt(3, orderdetail.getQuantity());
			ps.setInt(4, orderdetail.getPrice());
			ps.executeUpdate();	
			
		}catch(Exception e){
			e.printStackTrace();
			return false;
		}
		return true;
	}
	
}
